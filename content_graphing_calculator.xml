<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_graphing_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ticetech.calculator.GraphingCalculator"
    tools:showIn="@layout/activity_graphing_calculator">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/gridLayout">


        <ImageButton
            app:srcCompat="@drawable/zero"
            android:scaleType="fitCenter"
            android:id="@+id/button0"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="setPic"
            android:minHeight="11dp"
            android:background="@android:color/transparent"
            android:layout_height="65dp"
            android:layout_width="50dp" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/pic1"
        android:layout_above="@+id/gridLayout">

    </GridLayout>


</RelativeLayout>
