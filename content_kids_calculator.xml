<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_kids_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ticetech.calculator.KidsCalculator"
    tools:showIn="@layout/activity_kids_calculator">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/gridLayout">


            <ImageButton
                app:srcCompat="@drawable/zero"
                android:scaleType="fitCenter"
                android:id="@+id/button0"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="numbClick"
                android:minHeight="11dp"
                android:background="@android:color/transparent"
                android:layout_height="65dp"
                android:layout_width="50dp" />

            <ImageButton
                app:srcCompat="@drawable/one"
                android:scaleType="fitCenter"
                android:layout_height="65dp"
                android:id="@+id/button1"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="numbClick"
                android:minHeight="10dp"
                android:background="@android:color/transparent"
                android:layout_width="50dp" />

            <ImageButton
                app:srcCompat="@drawable/two"
                android:scaleType="fitCenter"
                android:layout_height="65dp"
                android:id="@+id/button2"
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="numbClick"
                android:minHeight="10dp"
                android:background="@android:color/transparent"
                android:layout_width="50dp" />

            <ImageButton
                app:srcCompat="@drawable/three"
                android:scaleType="fitCenter"
                android:layout_height="65dp"
                android:id="@+id/button3"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="numbClick"
                android:minHeight="10dp"
                android:background="@android:color/transparent"
                android:layout_width="50dp" />

            <ImageButton
                app:srcCompat="@drawable/four"
                android:scaleType="fitCenter"
                android:layout_height="65dp"
                android:id="@+id/button4"
                android:layout_row="0"
                android:layout_column="4"
                android:onClick="numbClick"
                android:minHeight="10dp"
                android:background="@android:color/transparent"
                android:layout_width="50dp" />

            <ImageButton
                app:srcCompat="@drawable/five"
                android:scaleType="fitCenter"
                android:layout_height="65dp"
                android:id="@+id/button5"
                android:onClick="numbClick"
                android:layout_column="5"
                android:layout_row="0"
                android:minHeight="10dp"
                android:background="@android:color/transparent"
                android:layout_width="50dp" />

            <ImageButton
                app:srcCompat="@drawable/six"
                android:scaleType="fitCenter"
                android:layout_height="65dp"
                android:id="@+id/button6"
                android:onClick="numbClick"
                android:layout_column="6"
                android:layout_row="0"
                android:minHeight="10dp"
                android:background="@android:color/transparent"
                android:layout_width="50dp" />

            <ImageButton
                app:srcCompat="@drawable/seven"
                android:scaleType="fitCenter"
                android:layout_height="65dp"
                android:id="@+id/button7"
                android:onClick="numbClick"
                android:layout_column="7"
                android:layout_row="0"
                android:minHeight="10dp"
                android:background="@android:color/transparent"
                android:layout_width="50dp" />

            <ImageButton
                app:srcCompat="@drawable/eight"
                android:scaleType="fitCenter"
                android:layout_height="65dp"
                android:id="@+id/button8"
                android:onClick="numbClick"
                android:layout_column="8"
                android:layout_row="0"
                android:minHeight="10dp"
                android:background="@android:color/transparent"
                android:layout_width="50dp" />

            <ImageButton
                app:srcCompat="@drawable/nine"
                android:scaleType="fitCenter"
                android:layout_height="65dp"
                android:id="@+id/button9"
                android:onClick="numbClick"
                android:layout_column="9"
                android:layout_row="0"
                android:minHeight="10dp"
                android:background="@android:color/transparent"
                android:layout_width="50dp" />

        </GridLayout>

   <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gridLayout"
            android:layout_alignLeft="@+id/enteredText"
            android:layout_alignStart="@+id/enteredText"
            android:layout_marginBottom="19dp"
            android:id="@+id/imageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/gridLayout2"
        android:layout_toStartOf="@+id/gridLayout2">

        <GridLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/pic1"
            android:rowCount="3"
            android:columnCount="3">

        </GridLayout>



        <TextView
            android:layout_width="50dp"
            android:layout_height="140dp"
            android:id="@+id/symbol"
            android:textStyle="bold"
            android:textSize="70sp"
            android:textColor="@android:color/holo_red_dark"
            android:textAlignment="center" />

        <GridLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/pic2">

        </GridLayout>

        <TextView
            android:layout_width="50dp"
            android:layout_height="140dp"
            android:id="@+id/symbol2"
            android:textSize="70sp"
            tools:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textStyle="bold" />


        <GridLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/pic3">

        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place1"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="50dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place2"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="50dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place3"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="50dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place4"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="50dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place5"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="50dp" />
    </LinearLayout>



    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <ImageButton
            app:srcCompat="@drawable/clear"
            android:scaleType="fitCenter"
            android:id="@+id/buttonClear"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="clearClick"
            android:minHeight="10dp"
            android:background="@android:color/transparent"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_width="40dp" />


        <ImageButton
            app:srcCompat="@drawable/plus"
            android:scaleType="fitCenter"
            android:id="@+id/buttonPlus"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="symClick"
            android:minHeight="10dp"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_gravity="right" />

        <ImageButton
            app:srcCompat="@drawable/minus"
            android:scaleType="fitCenter"
            android:layout_width="40dp"
            android:id="@+id/buttonMinus"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="symClick"
            android:minHeight="10dp"
            android:background="@android:color/transparent"
            android:layout_height="45dp"
            android:layout_gravity="right" />

        <ImageButton
            app:srcCompat="@drawable/mult"
            android:scaleType="fitCenter"
            android:layout_width="40dp"
            android:id="@+id/buttonMult"
            android:onClick="symClick"
            android:layout_row="2"
            android:layout_column="0"
            android:minHeight="10dp"
            android:background="@android:color/transparent"
            android:layout_height="45dp"
            android:layout_gravity="right" />


        <ImageButton
            app:srcCompat="@drawable/div"
            android:scaleType="fitCenter"
            android:layout_width="40dp"
            android:id="@+id/buttonDiv"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="symClick"
            android:minHeight="10dp"
            android:background="@android:color/transparent"
            android:layout_height="45dp"
            android:layout_gravity="right" />


    </GridLayout>



</RelativeLayout>
