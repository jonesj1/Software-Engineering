<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_quiz_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ticetech.calculator.QuizCalculator"
    tools:showIn="@layout/activity_quiz_calculator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/topView"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/bottomView"
        android:layout_below="@+id/topView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="45sp"
        android:hint="Enter an Number"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/gridLayout">

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:onClick="numClick"
            android:textAlignment="center"
            android:layout_column="0"
            android:layout_row="2"
            android:minWidth="82dp" />

        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:onClick="numClick"
            android:textAlignment="center"
            android:layout_column="1"
            android:layout_row="2"
            android:minWidth="82dp" />

        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:onClick="numClick"
            android:textAlignment="center"
            android:layout_column="2"
            android:layout_row="2"
            android:minWidth="82dp" />

        <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMult"
            android:onClick="symbClick"
            android:textAlignment="center"
            android:layout_column="4"
            android:layout_row="3"
            android:minWidth="82dp" />

        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="numClick"
            android:textAlignment="center"
            android:minWidth="82dp" />

        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:onClick="numClick"
            android:textAlignment="center"
            android:layout_column="1"
            android:layout_row="3"
            android:minWidth="82dp" />

        <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="numClick"
            android:textAlignment="center"
            android:minWidth="82dp" />

        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="numClick"
            android:textAlignment="center"
            android:minWidth="82dp" />

        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="numClick"
            android:textAlignment="center"
            android:minWidth="82dp" />

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:layout_row="4"
            android:layout_column="3"
            android:onClick="numClick"
            android:textAlignment="center"
            android:minWidth="82dp" />

        <Button
            android:text="(-)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNeg"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="numClick"
            android:textAlignment="center"
            android:minWidth="82dp" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            android:layout_row="3"
            android:layout_column="5"
            android:onClick="symbClick"
            android:textAlignment="center"
            android:minWidth="82dp" />

        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDiv"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="4"
            android:layout_column="4"
            android:onClick="symbClick"
            android:textAlignment="center"
            android:minWidth="82dp" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus"
            android:layout_row="4"
            android:layout_column="5"
            android:onClick="symbClick"
            android:textAlignment="center"
            android:minWidth="82dp" />


        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:onClick="numClick"
            android:textAlignment="center"
            android:layout_column="2"
            android:layout_row="3"
            android:minWidth="82dp" />

        <Button
            android:text="I'm Done!"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:id="@+id/buttonDone"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:onClick="nextClick"
            android:textAlignment="center"
            android:minWidth="82dp"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_horizontal" />

    </GridLayout>

</RelativeLayout>






