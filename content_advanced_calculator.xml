<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_advanced_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ticetech.calculator.AdvancedCalculator"
    tools:showIn="@layout/activity_advanced_calculator">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/gridLayout">

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:layout_column="0"
            android:layout_row="0"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:layout_column="1"
            android:layout_row="0"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:layout_column="2"
            android:layout_row="0"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMult"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:layout_column="3"
            android:layout_row="0"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:layout_column="1"
            android:layout_row="1"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:layout_column="2"
            android:layout_row="1"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDiv"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEqual"
            android:layout_row="3"
            android:layout_column="7"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="73dp"
            android:minHeight="42dp" />


        <Button
            android:text="clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear"
            android:layout_row="0"
            android:layout_column="7"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="73dp"
            android:minHeight="42dp" />

        <Button
            android:text="delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:layout_row="1"
            android:layout_column="7"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decimal"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="("
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftParen"
            android:layout_row="3"
            android:layout_column="5"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text=")"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightParen"
            android:layout_row="3"
            android:layout_column="6"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="sin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sin"
            android:layout_row="0"
            android:layout_column="4"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="cos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cos"
            android:layout_row="0"
            android:layout_column="5"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="tan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tan"
            android:layout_row="0"
            android:layout_column="6"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="pi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pi"
            android:layout_row="3"
            android:layout_column="4"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="asin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/asin"
            android:layout_row="1"
            android:layout_column="4"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="acos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acos"
            android:layout_row="1"
            android:layout_column="5"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="atan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/atan"
            android:layout_row="1"
            android:layout_column="6"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/log"
            android:layout_row="2"
            android:layout_column="4"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="ln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ln"
            android:layout_row="2"
            android:layout_column="5"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="abs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abs"
            android:layout_row="2"
            android:layout_column="6"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />

        <Button
            android:text="^"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pow"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="onClicked"
            android:textAlignment="center"
            android:minWidth="70dp"
            android:minHeight="42dp" />


    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/enteredText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout"
        android:layout_alignLeft="@+id/enteredText"
        android:layout_alignStart="@+id/enteredText"
        android:layout_marginBottom="19dp"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enteredText"
        android:hint="Enter Expression"
        android:textSize="30sp"
        android:cursorVisible="false"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
